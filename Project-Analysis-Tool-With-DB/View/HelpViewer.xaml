<Window x:Class="SpAnalyzerTool.View.HelpViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpAnalyzerTool.View"
        mc:Ignorable="d"
        Title="حـول البرنامج" 
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Height="450" 
        Width="800"
        Loaded="Window_Loaded">
    <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="10" Padding="15" Background="White">

            <ScrollViewer>
                <StackPanel x:Name="stackPanelContent" Margin="10">
                    <TextBlock x:Name="txtTitle"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0 0 0 5"/>

                    <!-- سيتم إضافة العناصر من الكود -->

                </StackPanel>
            </ScrollViewer>


    </Border>

</Window>
